
  model {
    # Likelihood 
    for (i in 1:N) {
      Y[i] ~ dnorm(mu[i], prec)
      mu[i] <- alpha + inprod(X[i,], beta)
    } 
    
    # Prior
    alpha ~ dnorm(0, 0.001)
    
    for(j in 1:p) {
    	beta[j] ~ dnorm(0, 0.001)
    }

    sigma ~ dgamma(0.01, 0.01)
    prec <- 1 / (sigma*sigma)
  }
  